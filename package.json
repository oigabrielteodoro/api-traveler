{
  "name": "api-traveler",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "celebrate": "15.0.0",
    "class-transformer": "0.4.0",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "express-async-errors": "3.1.1",
    "io-ts-types": "0.5.16",
    "module-alias": "2.2.2",
    "monocle-ts": "2.3.10",
    "newtype-ts": "0.3.4",
    "pg": "8.7.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "4.6.0",
    "typeorm": "^0.2.34",
    "uuid": "8.3.2"
  },
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --respawn --ignore-watch node_modules src/index.ts",
    "test": "jest --passWithNoTests && yarn test:integration",
    "test:watch": "jest --watch",
    "test:integration": "jest --passWithNoTests --config jest.config.integration.js",
    "test:integration:watch": " yarn test:integration --watch",
    "lint": "eslint . --ext js,ts",
    "lint:fix": "eslint --fix . --ext js,ts",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "build": "tsc",
    "prepare": "husky install",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint --fix"
    ],
    "*.js": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "@types/module-alias": "2.0.1",
    "@types/node": "16.4.3",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "@typescript-eslint/typescript-estree": "4.28.5",
    "commitlint": "13.1.0",
    "eslint": "7.12.1",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.1.1",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "sucrase": "3.20.0",
    "ts-jest": "27.0.4",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  }
}
